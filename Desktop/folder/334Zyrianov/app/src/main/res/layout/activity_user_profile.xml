<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UserProfile"
    android:background="@color/color_screen">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:ignore="MissingConstraints">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        tools:ignore="MissingConstraints">

        <ImageView
            android:id="@+id/imageView5"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            app:srcCompat="@drawable/avatar"
            android:paddingTop="30dp"/>

        <TextView
            android:id="@+id/textView5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginStart="125dp"
            android:layout_marginEnd="125dp"
            android:text="dreamila"
            android:textColor="@color/white"
            android:textSize="24dp"
            android:textAlignment="center"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/textView6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Статус не установлен"
            android:textColor="@color/white"
            android:textSize="20dp"
            android:textStyle="bold"
            android:textAlignment="center"/>

        <TextView
            android:paddingTop="5dp"
            android:onClick="more"
            android:id="@+id/textView7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="онлайн >"
            android:textColor="@color/gray"
            android:textSize="16dp"
            android:textStyle="bold"
            android:textAlignment="center"/>
        <TextView
            android:id="@+id/textView8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingStart="30dp"
            android:drawableRight="@drawable/ic_info"
            android:drawablePadding="20dp"
            android:paddingTop="20dp"
            android:text="Статистика"
            android:textColor="@color/white"
            android:textSize="16dp"
            android:textStyle="bold"/>
        <TextView
            android:id="@+id/textView9"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:paddingStart="30dp"
            android:drawableStart="@drawable/ic_circle_green"
            android:drawablePadding="5dp"
            android:paddingTop="5dp"
            android:text="Смотрю"
            android:textColor="@color/gray"
            android:textSize="16dp"
            android:textStyle="normal"/>
        <TextView
            android:id="@+id/textView15"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:layout_marginTop="-22dp"
            android:layout_marginStart="180dp"
            android:text="1"
            android:textColor="@color/white"
            android:textSize="16dp"
            android:textStyle="normal"/>
        <TextView
            android:id="@+id/textView10"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:paddingStart="30dp"
            android:drawableStart="@drawable/ic_circle_purple"
            android:drawablePadding="5dp"
            android:paddingTop="5dp"
            android:text="В планах"
            android:textColor="@color/gray"
            android:textSize="16dp"
            android:textStyle="normal"/>
        <TextView
            android:id="@+id/textView16"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:layout_marginTop="-22dp"
            android:layout_marginStart="180dp"
            android:text="47"
            android:textColor="@color/white"
            android:textSize="16dp"
            android:textStyle="normal"/>
        <TextView
        android:id="@+id/textView11"
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:paddingStart="30dp"
        android:drawableStart="@drawable/ic_circle_blue"
        android:drawablePadding="5dp"
        android:paddingTop="5dp"
        android:text="Просмотрено"
        android:textColor="@color/gray"
        android:textSize="16dp"
        android:textStyle="normal"/>
        <TextView
            android:id="@+id/textView17"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:layout_marginTop="-22dp"
            android:layout_marginStart="180dp"
            android:text="44"
            android:textColor="@color/white"
            android:textSize="16dp"
            android:textStyle="normal"/>
        <TextView
        android:id="@+id/textView12"
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:paddingStart="30dp"
        android:drawableStart="@drawable/ic_circle_orange"
        android:drawablePadding="5dp"
        android:paddingTop="5dp"
        android:text="Отложено"
        android:textColor="@color/gray"
        android:textSize="16dp"
        android:textStyle="normal"/>
        <TextView
            android:id="@+id/textView18"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:layout_marginTop="-22dp"
            android:layout_marginStart="180dp"
            android:text="3"
            android:textColor="@color/white"
            android:textSize="16dp"
            android:textStyle="normal"/>
        <TextView
        android:id="@+id/textView13"
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:paddingStart="30dp"
        android:drawableStart="@drawable/ic_circle_red"
        android:drawablePadding="5dp"
        android:paddingTop="5dp"
        android:text="Брошено"
        android:textColor="@color/gray"
        android:textSize="16dp"
        android:textStyle="normal"/>
        <TextView
            android:id="@+id/textView19"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:layout_marginTop="-22dp"
            android:layout_marginStart="180dp"
            android:text="10"
            android:textColor="@color/white"
            android:textSize="16dp"
            android:textStyle="normal"/>
        <TextView
            android:id="@+id/textView14"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="10dp"
            android:paddingStart="30dp"
            android:text="Просмотрено недавно"
            android:textColor="@color/white"
            android:textSize="16dp"
            android:textStyle="bold"/>
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/resview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="20dp"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            app:spanCount="1"
            android:orientation="vertical"
            tools:listitem="@layout/recentlyviewed" />
    </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>